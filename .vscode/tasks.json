{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "make:all",
        "type": "shell",
        "command": "make -j",
        "options": { "cwd": "${workspaceFolder}" },
        "problemMatcher": ["$gcc", "$g++"],
        "group": { "kind": "build", "isDefault": true }
      },
      {
        "label": "Run QEMU/kasmos",
        "type": "shell",
        "command": "make boot-debug",
        "options": { "cwd": "${workspaceFolder}" },
        "problemMatcher": []
      },
      {
        "label": "build+run",
        "dependsOn": ["make:all", "Run QEMU/kasmos"],
        "dependsOrder": "sequence"
      }
    ]
  }